---
const textLinks: { label: string; href: string }[] = [
  { label: "Home", href: "/" },
  { label: "Blog", href: "/blog/" },
  { label: "Work", href: "/work/" },
];

function isCurrent(href: string): boolean {
  return Astro.url.pathname == href || (href.length > 1 && Astro.url.pathname.startsWith(href));
}
---

<nav>
  <ul class="flex gap-4">
    {
      textLinks.map(({ label, href }) => (
        <li>
          <a aria-current={isCurrent(href)} href={href}>
            {label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  a[aria-current] {
    font-weight: bold;
  }
</style>
