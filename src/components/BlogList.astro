---
import type { CollectionEntry } from "astro:content";

import BlogPreview from "./BlogPreview.astro";
import Pagination from "./Pagination.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
  length?: number;
  currentUrl?: string;
  currentPage?: number;
  firstUrl?: string;
  prevUrl?: string;
  nextUrl?: string;
  lastUrl?: string;
}

const { posts, length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } = Astro.props;
---

<ul>
  {
    posts.map((blog) => (
      <li>
        <BlogPreview blog={blog} />
      </li>
    ))
  }
</ul>

<Pagination
  length={length}
  currentUrl={currentUrl}
  currentPage={currentPage}
  firstUrl={firstUrl}
  prevUrl={prevUrl}
  next={nextUrl}
  lastUrl={lastUrl}
/>
